@page
@model PizzaDeliveryRazorPages.Pages.Forms.CustomPizza

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>

<div class="text-center container">
    <h1>Create Your Own Pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName"
               placeholder="give your pizza a name.."/>
        <br/>
        <input type="checkbox" asp-for="Pizza.PizzaName"
               placeholder="give your pizza a name.."/>
        <br/>
        <input type="checkbox" asp-for="Pizza.TomatoSauce"
               placeholder="Tomato Sauce"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Cheese"
               placeholder="Cheese"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Beef"
               placeholder="Beef"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Peperoni"
               placeholder="Peperoni"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Mushroom"
               placeholder="Mushroom"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Tuna"
               placeholder="Tuna"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Pineapple"
               placeholder="Pineapple"/>
        <br/>
        <input type="checkbox" asp-for="Pizza.Ham"
               placeholder="Ham"/>
        <br/>
        
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
        
    </form>
</div>